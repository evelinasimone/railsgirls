<p id="notice"><%= notice %></p>

<h1>Ideas</h1>


<div class="row">

<% @ideas.each do |idea| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail"> 
      <%= image_tag idea.picture_url if idea.picture.present? %>  
      <div class="caption">
        <h3><%= idea.name %></h3>
        <p>
          <%= idea.description %>
          
        </p>
        <p>
          <%= link_to 'Show', idea, class: "btn btn-primary"%>
          <%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-default" %>
          <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
 </div>
 <% end %>
</div>